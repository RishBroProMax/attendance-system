{
    "$schema": "https://schema.tauri.app/config/2",
    "identifier": "com.attendance.system",
    "productName": "Attendance System",
    "version": "1.0.0",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:3000",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../out"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": {
            "LICENSE": "./LICENSE"
        },
        "windows": {
            "nsis": {
                "template": "./installer.nsi",
                "installMode": "perMachine",
                "languages": [
                    "English"
                ],
                "displayLanguageSelector": false
            }
        },
        "externalBin": []
    },
    "app": {
        "windows": [
            {
                "title": "Attendance System",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "fileDropEnabled": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {
        "updater": {
            "active": true,
            "endpoints": [
                "https://github.com/YOUR_USERNAME/attendance-system/releases/latest/download/latest.json"
            ],
            "dialog": false,
            "pubkey": "REPLACE_WITH_YOUR_PUBLIC_KEY_FROM_TAURI_SIGNER_GENERATE"
        }
    }
}